</head>
<body>
    <nav class="navbar navbar-light bg-light">
        <a class="navbar-brand" href="#">
          <img src="/docs/4.5/assets/brand/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt="" loading="lazy">
          Bootstrap
        </a>
      </nav>
      <div class="container">
          <a href="/SinhVien/add"><button>Add</button></a>
        <table class="table">
            <tr>
                <th scope="col">id</th>
                <th scope="col">Mã sinh viên</th>
                <th scope="col">Tên sinh viên</th>
                <th scope="col">Mã lớp</th>
                <th scope="col">Năm sinh</th>
                <th scope="col">Avatar</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
            <% for(var i = 0; i < listSinhVien.length; i++){ %>
                <tr>
                    <th scope="row"><%= listSinhVien[i].id%></th>
                    <td><%= listSinhVien[i].ma_sinhvien%></td>
                    <td><%= listSinhVien[i].ten_sinhvien%></td>
                    <td><%= listSinhVien[i].ma_lop%></td>
                    <td><%= listSinhVien[i].namsinh%></td>
                    <td><%= listSinhVien[i].avatar%></td>
                    <td><a href="/SinhVien/edit/<%= listSinhVien[i].ma_sinhvien%>&<%= listSinhVien[i].id%>"><button>Edit</button></a></td>
                    <td><a href="/SinhVien/delete/<%= listSinhVien[i].ma_sinhvien%>&<%= listSinhVien[i].id%>"><button>Delete</button></a></td>
                </tr>
            <% }%>
        </table>
      </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
